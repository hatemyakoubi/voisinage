<section class="ftco-section ftco-degree-bg">

    <div class="container">

        <div class="row">
            <div class="col-md-8 ftco-animate">
                  
                <div class="pt-5 mt-5">
                    <h3 class="mb-5">{{demande.comments|length}} Commentaires</h3>
                    <ul class="comment-list"> 
                     
                        {% for comment  in demande.comments %}
                                         
                           {% if comment.parent == null %}
                        <li class="comment">
                            <div class="vcard bio">
                            
                          {% if comment.user.userImage == null %}
                           
                             <img src="{{asset('uploads/images_users/imageprofil/userprofile.png')}}" alt="Image de profile">
                           {% else %}
                               
                            <img src="{{ vich_uploader_asset(comment.user.userImage, 'imageFile')|imagine_filter('imageusers') }}" alt="Image de profile"/>

                               
                           {% endif %}
                           
                            </div>
                            <div class="comment-body">
                                <h3>{{comment.user.lastname|upper}} {{comment.user.username|upper}}</h3>
                                <div class="meta">publié le {{comment.createdAt|date("d/m/y H:i")}}</div>
                                <p>{{comment.content}}</p>
                                <p><a href="#ajout-commentaire" class="reply" data-reply data-id="{{comment.id}}" >Répondre</a></p>  
                            </div>
                            {# on affiche les réponse de commentaire#}
                                {% for reply in comment.replies %}
                                    <ul class="children">
                                        <li class="comment">
                                            <div class="vcard bio">
                                            {% if reply.user.userImage == null %}
                           
                                                <img src="{{asset('uploads/images_users/imageprofil/userprofile.png')}}" alt="Image de profile">
                                            {% else %}
                                                
                                                <img src="{{ vich_uploader_asset(reply.user.userImage, 'imageFile')|imagine_filter('imageusers') }}" alt="Image de profile"/>

                                                
                                            {% endif %}
                                            </div>
                                            <div class="comment-body">
                                                <h3>{{reply.user.lastname|upper}} {{reply.user.username|upper}}</h3>
                                                <div class="meta">Réponse publiée le {{reply.createdAt|date("d/m/Y H:i") }} </div>
                                                <p>{{reply.content}}</p>
                                                
                                            </div>
                                        </li>
                                    </ul>

                                {% endfor %}
                        </li>
                            {% endif %}
                        {% endfor %}
                        
                    </ul>
                    <!-- END comment-list -->

                    <div class="comment-form-wrap pt-5" id="ajout-commentaire">
                        <h3 class="mb-5">Laissez un commentaire</h3>
                        {{form(commentForm)}}
                    </div>
                </div>

            </div> <!-- .col-md-8 -->
          

