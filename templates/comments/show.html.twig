{% extends 'admin.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ comment.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Creé le</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Publier par</th>
                <td>{{ comment.user.username }} {{ comment.user.lastname }}</td>
            </tr>
        </tbody>
    </table>
<div class="row" style="margin-top: 15px;">


    <a href="{{ path('comments_edit', {'id': comment.id}) }}"><button class="btn btn-success"style="margin-right: 15px;">Modifier</button></a>
    <a href="{{ path('comments_index') }}"class="btn btn-info" style="margin-right: 15px;">retour à la liste</a>


    {{ include('comments/_delete_form.html.twig') }}
</div>
{% endblock %}
