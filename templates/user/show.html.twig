{% extends 'admin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                 {% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                
                </td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>
                
                {% if user.enabled == "1" %}
                               Oui
                            {% else %}
                                Non
                            
                            {% endif %}

                </td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ user.token }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ user.adress }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row" style="margin-top: 15px;">

    
    <a href="{{ path('user_edit', {'id': user.id}) }}" ><button class="btn btn-success"style="margin-right: 15px;">Modifier</button></a>
    <a href="{{ path('user_index') }}"><button class="btn btn-warning" style="margin-right: 15px;" >Retour Ã  la liste</button></a>

 {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
